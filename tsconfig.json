{
  "compilerOptions": {
    "target": "ES2020",         
    "module": "NodeNext",         
    "outDir": "./public/js",    
    "strict": true,          
    "esModuleInterop": true,    
    "skipLibCheck": true,       
    "forceConsistentCasingInFileNames": true, 
    "allowJs": true,            
    "noEmitOnError": false,   
    "moduleResolution": "NodeNext", 
    "rootDir": "./src",         
    "sourceMap": true           
  },
  "include": [
    "src/**/*.ts"               
  ],
  "exclude": [
    "node_modules"              
  ]
}
